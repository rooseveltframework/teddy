{
  "name": "teddy",
  "description": "Teddy Templating Engine",
  "author": "Roosevelt Framework Team <rooseveltframework@gmail.com>",
  "contributors": [
    {
      "name": "Contributors",
      "url": "https://github.com/rooseveltframework/teddy/graphs/contributors"
    }
  ],
  "version": "0.4.28",
  "homepage": "https://github.com/rooseveltframework/teddy",
  "license": "CC-BY-4.0",
  "main": "teddy.js",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=10.0.0"
  },
  "engineStrict": true,
  "dependencies": {},
  "devDependencies": {
    "chai": "~4.2.0",
    "chai-string": "~1.5.0",
    "codecov": "~3.5.0",
    "cross-env": "~5.2.0",
    "eslint": "~6.2.2",
    "eslint-plugin-mocha": "~6.1.0",
    "husky": "~3.0.4",
    "karma": "~4.2.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "~2.0.0",
    "karma-coverage": "~2.0.1",
    "karma-edge-launcher": "~0.4.2",
    "karma-firefox-launcher": "~1.2.0",
    "karma-html2js-preprocessor": "~1.1.0",
    "karma-ie-launcher": "~1.0.0",
    "karma-mocha": "~1.3.0",
    "karma-safari-launcher": "~1.0.0",
    "karma-spec-reporter": "~0.0.32",
    "lint-staged": "~9.2.4",
    "mocha": "~6.2.0",
    "nyc": "~14.1.1",
    "standard": "~14.0.2"
  },
  "standard": {
    "ignore": [
      "test/client.js"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "mocha"
    ],
    "rules": {
      "mocha/no-exclusive-tests": "error"
    }
  },
  "nyc": {
    "report-dir": "./coverage/server",
    "reporter": [
      "html",
      "text",
      "lcov"
    ]
  },
  "scripts": {
    "codecov": "./node_modules/.bin/codecov",
    "coverage": "cross-env NODE_ENV=cover nyc mocha test && karma start",
    "lint": "standard && eslint ./test",
    "test": "cross-env NODE_ENV=test npm run test-server && karma start",
    "test-chrome": "karma start --browsers ChromeHeadless",
    "test-edge": "karma start --browsers Edge",
    "test-firefox": "karma start --browsers Firefox",
    "test-ie": "karma start --browsers IE",
    "test-safari": "karma start --browsers Safari",
    "test-server": "cross-env NODE_ENV=test mocha test"
  },
  "lint-staged": {
    "*.js": "standard && && eslint ./test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rooseveltframework/teddy.git"
  },
  "keywords": [
    "teddy.js",
    "node.js",
    "teddy",
    "template",
    "view"
  ],
  "_from": "teddy@*",
  "gitHead": "1dbbc4c73d7c8878cbe7fc0ba527c91018b4cea7",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && eslint ./test"
    }
  }
}
